<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>

    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="appsettings.Test.json" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="appsettings.Test.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FluentAssertions" Version="5.7.0" />
    <PackageReference Include="Microsoft.AspNetCore.App" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Testing" Version="2.2.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.2.0" />
    <PackageReference Include="Selenium.Chrome.WebDriver" Version="76.0.0" />
    <PackageReference Include="SpecFlow" Version="3.0.225" />
    <PackageReference Include="SpecFlow.Tools.MsBuild.Generation" Version="3.0.225" />
    <PackageReference Include="SpecFlow.xUnit" Version="3.0.225" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Optivem.Framework.Infrastructure.AspNetCore" Version="1.0.15" />
    <PackageReference Include="Optivem.Framework.Infrastructure.NewtonsoftJson" Version="1.0.15" />
    <PackageReference Include="Optivem.Framework.Infrastructure.Selenium" Version="1.0.15" />
    <PackageReference Include="Optivem.Framework.Test.AspNetCore" Version="1.0.15" />
    <PackageReference Include="Optivem.Framework.Test.Selenium" Version="1.0.15" />
    <PackageReference Include="Optivem.Framework.Test.Xunit" Version="1.0.15" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\src\Web\UI.Client.Interface\Optivem.Template.Web.UI.Client.Interface.csproj" />
    <ProjectReference Include="..\..\..\src\Web\UI.Client\Optivem.Template.Web.UI.Client.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Customer.feature.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Customer.feature</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <SpecFlowFeatureFiles Update="Customer.feature">
      <Generator>SpecFlowSingleFileGenerator</Generator>
      <LastGenOutput>Customer.feature.cs</LastGenOutput>
    </SpecFlowFeatureFiles>
  </ItemGroup>

</Project>
